<section class="vh-80" style="background-color: #508bfc;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <form id="account" method="post">

                            <h3 class="mb-5">Sign in</h3>

                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                            <div class="position-relative">
                            <div data-mdb-input-init class="form-outline">
                                <input asp-for="Input.Email" class="form-control form-control-lg"
                                       autocomplete="username" aria-required="true" placeholder="name@example.com" required/>
                                <label class="form-label" asp-for="Input.Email">Email</label>
                                
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger "></span>
                            </div>
                            <div class="mb-4"></div>

                            <div data-mdb-input-init class="form-outline">
                                <input asp-for="Input.Password" class="form-control form-control-lg @(ViewData.ModelState["Input.Email"]?.Errors.Any() == true ? "is-invalid" : "")"
                                       autocomplete="current-password" aria-required="true" placeholder="password" required/>
                                <label class="form-label" asp-for="Input.Password">Password</label>
                                
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                            <div class="mb-4"></div>

                            <!-- Checkbox -->
                            <div class="form-check d-flex justify-content-start mb-4">
                                <input class="form-check-input" type="checkbox" value="" id="form1Example3"/>
                                <label class="form-check-label" for="form1Example3"> Remember password </label>
                            </div>

                            <button data-mdb-ripple-init class="btn btn-primary btn-lg btn-block"
                                    id="login-submit" type="submit">Login
                            </button>

                            <hr class="my-4">

                            <div>
                                <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                </p>
                                <p>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new
                                        user</a>
                                </p>
                                <p>
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email
                                        confirmation</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

