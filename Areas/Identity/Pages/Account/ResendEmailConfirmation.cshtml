@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<section class="vh-100" style="background-color: #f8f9fa;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mb-3">@ViewData["Title"]</h3>
                        <p class="text-muted mb-4">Enter your email to receive a new confirmation link.</p>

                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email"></label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <button type="submit" class="w-100 btn btn-lg btn-primary mb-3">Resend</button>
                        </form>

                        @if (!string.IsNullOrEmpty(Model.StatusMessage))
                        {
                            <div class="alert alert-info mt-3" role="alert">
                                @Model.StatusMessage
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
